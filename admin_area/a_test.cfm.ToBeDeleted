
<CFPARAM NAME="a_choice" DEFAULT ="ALL">



<CFSET a_group_list = #ListToArray("Affirmative Coverage|Bankruptcy Matters|Cemeteries|Condo`s & PUD`s|Dower|Driveways and Walkways|Easements|Encroachments|Estate|Fixture and Personal Property|Foreclosure Matters|Leases|Mechanic`s Liens|Mineral Rights|No liability|Open Judgments|Open Mortgages|Parties in Possession|Party Walls|Payoff Federal Tax Liens|Payoff Judgments|Payoff Mortgage/Deed of Trust|Restrictions|Streets and Alleys|Subject to the lease|Survey Maters|Taxes and Assessments|Unrecorded Interest|Water Rights|Miscellaneous", "|")#>




<CFIF #a_modify# EQ "1">

	<CFSET a_temp = #ListToArray(a_group_name_2, ",")#>
	
	<CFLOOP FROM="1" TO="#ArrayLen(a_temp)#" INDEX="CCC">
	
		<CFSET a_1 = #ListToArray(a_temp[CCC], "|")#>

		<CFQUERY DATASOURCE="First_Title_Main_Admin" NAME="read_all_endorsements">		
			UPDATE Doc_committment_Clauses
			SET a_Group_Name = '#a_1[2]#'
			WHERE commitment_ID = #a_1[1]#
		</CFQUERY>
	</CFLOOP>
		
		

		
		


</CFIF>

		<CFQUERY DATASOURCE="First_Title_Main_Admin" NAME="read_all_endorsements">		
			SELECT *
			FROM Doc_committment_Clauses
			WHERE commitment_Ref = '#a_choice#'
			ORDER BY commitment_Name ASC
		</CFQUERY>




	<CFSET a_comm_name = ArrayNew(1)>
	<CFSET a_comm_ref = ArrayNew(1)>
	<CFSET a_comm_group_name = ArrayNew(1)>
	<CFSET a_comm_content = ArrayNew(1)>
	<CFSET a_comm_ID = ArrayNew(1)>
	
	<CFSET a_counter = "1">
	
	<CFOUTPUT QUERY="read_all_endorsements">
		<CFSET a_comm_name[a_counter] = #Commitment_name#>
		<CFSET a_comm_ref[a_counter] = #Commitment_ref#>
		<CFSET a_comm_group_name[a_counter] = #a_group_name#>
		<CFSET a_comm_content[a_counter] = #Commitment_content#>
		<CFSET a_comm_ID[a_counter] = #Commitment_ID#>
		
		<CFSET a_counter = #a_counter# + "1">
		
	</CFOUTPUT>



<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">

<html>
<head>
<title>1st Title & Escrow, Inc. </title>
</head>

<BODY BGCOLOR="white" TEXT="000000" LINK="FF0000" VLINK="800000" ALINK="FF00FF" BACKGROUND="?"  TopMargin=0 LeftMargin=0 MarginWidth=0 MarginHeight=0>

<CENTER>


<table width=600 cellpadding=1 cellpadding=1 border=0>
	<tr>
		<TD width=100 align=center valign=top>
			<font face=verdana size=1 color=black>
			Group
		</td>

		<TD width=100 align=center valign=top>
			<font face=verdana size=1 color=black>
			File Name
		</td>

		<TD width=400 align=center valign=top>
			<font face=verdana size=1 color=black>
			Contents
		</td>
	</tr>

<FORM METHOD=POST ACTION="./a_test.cfm?a_modify=1&a_choice=ALL">

<CFSET bg_color = "e1e1e1">
<CFSET a_tracker = "1">

<CFLOOP FROM="1" TO="#ArrayLen(a_comm_name)#" INDEX="AAA">

	<tr>
		<TD bgcolor="e1e1e1" width=100 align=center valign=top>
				<SELECT NAME="a_group_name_2" 			
					size="1" 
					style="font-size: 9; 
					font-family: verdana; 
					font-style: normal; 
					color: blue; 
					background-color: e1e1e1; 
					border-color: e1e1e1; 
					border-left-width: thin; 
					border-right-width: thin; 
					border-top-width: thin; 
					border-bottom-width: thin; 
					border-width: thin; 
					border-style: bar; 
					clear: none; 
					float: none;"  
					>
					
			<CFLOOP FROM="1" TO="#ArrayLen(a_group_list)#" INDEX="BBB">
				<CFOUTPUT>
					<CFIF #a_group_list[BBB]# EQ #a_comm_group_name[AAA]#>
						<OPTION VALUE="#a_comm_ID[AAA]#|#a_group_list[BBB]#" SELECTED>#a_group_list[BBB]#</OPTION>
					<CFELSE>
					<OPTION VALUE="#a_comm_ID[AAA]#|#a_group_list[BBB]#">#a_group_list[BBB]#</OPTION>
					</CFIF>
				</CFOUTPUT>
			</CFLOOP>
			
					</SELECT>
		</td>
<CFOUTPUT>
		<TD bgcolor="#bg_color#" width=100 align=center valign=top>
			<font face=verdana size=1 color=black>
			#a_comm_name[AAA]#
		</td>

		<TD bgcolor="#bg_color#" width=400 align=left valign=top>
			<font face=verdana size=1 color=black>
			#a_comm_content[AAA]#
		</td>
	</tr>
<CFIF #a_tracker# EQ "1">
	<CFSET bg_color = "white">
	<CFSET a_tracker = "2">	

<CFELSE>
	<CFSET bg_color = "e1e1e1">
	<CFSET a_tracker = "1">	
</CFIF>

</CFOUTPUT>

</CFLOOP>

	<tr>
		<TD  colspan=3 width=600 align=right valign=top>
			<font face=verdana size=1 color=black>
			<INPUT TYPE=submit value="modify">
			</FORM>
		</td>
	</tr>


</table>	
</BODY>
</HTML>
	
	
	